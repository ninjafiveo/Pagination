<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pagination.Page2"
             Title="Page2">
    <VerticalStackLayout BackgroundColor="DarkSalmon">
        <Label 
            Text="THIS IS PAGE 2 YO"
            VerticalOptions="Center" 
            HorizontalOptions="Center" TextColor="Black"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="Btn_To_Main" Text="Home" Clicked="Btn_To_Main_Clicked"/>
            <Button x:Name="Btn_To_Page2" Text="Page 2" Clicked="Btn_To_Page2_Clicked"/>
            <Button x:Name="Btn_To_Page3" Text="Page 3" Clicked="Btn_To_Page3_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>